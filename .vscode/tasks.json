                        }
                    ]
                }

*/
        },
        {
            "label": "Build", // 自定义任务的标签
            "type": "shell",
            "command": "cd build && ninja clean && cmake --build . -- -j16 && cd ../", // 执行清理命令
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Build&Download", // 新的自定义任务
            "type": "shell",
            "command": "cd build && ninja clean && cmake --build . -- -j16 && ninja Flash && cd ../", // 执行测试命令
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Refresh", // 新的自定义任务
            "type": "shell",
            "command": "rm -rf build && cmake -B build -S . -G Ninja ", // 执行测试命令
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": []
        },
